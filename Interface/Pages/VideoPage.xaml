<UserControl x:Class="Microsoft.Samples.Kinect.ControlsBasics.Pages.VideoPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Microsoft.Samples.Kinect.ControlsBasics.Pages"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <MediaElement x:Name="Video" LoadedBehavior="Manual" UnloadedBehavior="Stop" MediaEnded="Video_MediaEnded"/>
        <Button x:Name="play" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Width="auto" Height="auto" Click="Play_Click" Style="{StaticResource PlayButton}">
            <Image Source="/Assets/Play.png" Width="100"/>
        </Button>
    </Grid>
</UserControl>
